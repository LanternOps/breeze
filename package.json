{
  "name": "breeze",
  "version": "0.1.0",
  "private": true,
  "description": "Fast, modern Remote Monitoring and Management platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:generate": "turbo run db:generate --filter=@breeze/api",
    "db:push": "turbo run db:push --filter=@breeze/api",
    "db:migrate": "turbo run db:migrate --filter=@breeze/api",
    "db:seed": "turbo run db:seed --filter=@breeze/api",
    "db:studio": "turbo run db:studio --filter=@breeze/api",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.8.7",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "axios@>=1.13.0 <1.13.5": ">=1.13.5"
    }
  }
}
