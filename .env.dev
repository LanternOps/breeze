# Development Environment Configuration for Docker
# Usage: docker compose -f docker-compose.dev.yml --env-file .env.dev up

# Database (matches docker-compose.dev.yml)
POSTGRES_USER=breeze
POSTGRES_PASSWORD=breeze
POSTGRES_DB=breeze
DATABASE_URL=postgresql://breeze:breeze@postgres:5432/breeze

# Redis
REDIS_URL=redis://redis:6379

# Authentication (DEV ONLY - NOT FOR PRODUCTION)
JWT_SECRET=dev-jwt-secret-not-for-production-12345678
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
AGENT_ENROLLMENT_SECRET=dev-enrollment-secret-12345678

# Server
NODE_ENV=development
API_PORT=3001
WEB_PORT=4321
PUBLIC_API_URL=http://localhost:3001

# Object Storage (MinIO)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=breeze

# Logging
LOG_LEVEL=debug
LOG_JSON=false

# Features
ENABLE_REGISTRATION=true
ENABLE_2FA=true
ENABLE_API_DOCS=true
