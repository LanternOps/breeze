# Test Environment Configuration
# Used by integration tests running against Docker services

# Database (matches docker-compose.test.yml)
POSTGRES_USER=breeze_test
POSTGRES_PASSWORD=breeze_test
POSTGRES_DB=breeze_test
DATABASE_URL=postgresql://breeze_test:breeze_test@localhost:5433/breeze_test

# Redis (matches docker-compose.test.yml)
REDIS_URL=redis://localhost:6380

# Authentication (test secrets)
JWT_SECRET=test-jwt-secret-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
AGENT_ENROLLMENT_SECRET=test-enrollment-secret-12345678

# Server
NODE_ENV=test
API_PORT=3002
LOG_LEVEL=error
LOG_JSON=false

# Features (all enabled for testing)
ENABLE_REGISTRATION=true
ENABLE_2FA=true
ENABLE_API_DOCS=true
