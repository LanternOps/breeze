{
  "name": "@breeze/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.cjs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:docker:up": "docker compose -f ../../docker-compose.test.yml up -d --wait",
    "test:docker:down": "docker compose -f ../../docker-compose.test.yml down -v",
    "test:docker": "pnpm test:docker:up && pnpm test:integration; pnpm test:docker:down",
    "lint": "eslint --ext .ts src",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:sql": "tsx src/db/migrations/run.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.38",
    "@anthropic-ai/sdk": "^0.74.0",
    "@hono/node-server": "^1.19.9",
    "@hono/node-ws": "^1.3.0",
    "@hono/zod-validator": "^0.7.6",
    "@sentry/node": "^8.0.0",
    "@types/qrcode": "^1.5.6",
    "argon2": "^0.44.0",
    "bullmq": "^5.30.1",
    "drizzle-orm": "^0.45.1",
    "firebase-admin": "^12.6.0",
    "hono": "^4.11.9",
    "ioredis": "^5.4.2",
    "jose": "^5.9.6",
    "nanoid": "^5.0.9",
    "nodemailer": "^8.0.1",
    "otplib": "^13.1.0",
    "pg": "^8.13.1",
    "postgres": "^3.4.5",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "resend": "^3.5.0",
    "twilio": "^5.12.1",
    "zod": "^3.24.1",
    "@breeze/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^4.0.17",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.9",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  }
}
