---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Backup & Recovery | Breeze RMM">
  <div class="h-[calc(100vh-4rem)]" id="backup-root">
    <div class="flex h-full items-center justify-center">
      <div class="text-center">
        <p class="text-muted-foreground">Loading Backup Dashboard...</p>
        <p class="mt-2 text-sm text-muted-foreground">
          Tracking backup health and recovery readiness
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { createElement } from 'react';
  import { createRoot } from 'react-dom/client';
  import BackupDashboard from '../../components/backup/BackupDashboard';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('backup-root');
    if (container) {
      const root = createRoot(container);
      root.render(createElement(BackupDashboard));
    }
  });
</script>
