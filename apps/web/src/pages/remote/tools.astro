---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Remote Tools | Breeze RMM">
  <div class="h-[calc(100vh-4rem)]" id="remote-tools-root">
    <div class="flex h-full items-center justify-center">
      <div class="text-center">
        <p class="text-muted-foreground">Loading Remote Tools...</p>
        <p class="mt-2 text-sm text-muted-foreground">
          Select a device to access remote management tools
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { createElement } from 'react';
  import { createRoot } from 'react-dom/client';
  import RemoteToolsPage from '../../components/remote/RemoteToolsPage';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('remote-tools-root');
    if (container) {
      // Get device info from URL params
      const params = new URLSearchParams(window.location.search);
      const deviceId = params.get('deviceId') || 'demo-device-001';
      // Sanitize deviceName to prevent XSS - decode and remove potentially harmful characters
      const rawDeviceName = params.get('deviceName') || 'Demo Windows Workstation';
      const deviceName = decodeURIComponent(rawDeviceName).replace(/[<>"'&]/g, '');
      const deviceOs = (params.get('os') as 'windows' | 'linux' | 'darwin') || 'windows';

      const root = createRoot(container);
      root.render(
        createElement(RemoteToolsPage, {
          deviceId,
          deviceName,
          deviceOs,
          onClose: () => {
            window.history.back();
          }
        })
      );
    }
  });
</script>
