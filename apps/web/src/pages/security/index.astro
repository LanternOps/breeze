---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Security | Breeze RMM">
  <div class="h-[calc(100vh-4rem)]" id="security-root">
    <div class="flex h-full items-center justify-center">
      <div class="text-center">
        <p class="text-muted-foreground">Loading Security Dashboard...</p>
        <p class="mt-2 text-sm text-muted-foreground">
          Reviewing protection status and alerts
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { createElement } from 'react';
  import { createRoot } from 'react-dom/client';
  import SecurityDashboard from '../../components/security/SecurityDashboard';

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('security-root');
    if (container) {
      const root = createRoot(container);
      root.render(createElement(SecurityDashboard));
    }
  });
</script>
