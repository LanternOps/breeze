{
  "name": "@breeze/e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Breeze RMM using Claude Code coordination",
  "type": "module",
  "scripts": {
    "test": "tsx run.ts",
    "test:dry": "tsx run.ts --dry-run",
    "test:critical": "tsx run.ts --tags critical",
    "test:windows": "tsx run.ts --nodes windows",
    "test:linux": "tsx run.ts --nodes linux",
    "test:macos": "tsx run.ts --nodes macos"
  },
  "dependencies": {
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
